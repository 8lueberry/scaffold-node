{
  "name": "your_service",
  "version": "1.0.0",
  "description": "Service scaffolding with mocha, nyc, eslint",
  "scaffold-version": "1.0.0",
  "author": {
    "name": "Dan Le Van",
    "url": "https://github.com/danlevan/scaffold-node",
    "email": "email@gmail.com"
  },
  "main": "src/index.js",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": "~8.9.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "config/"
    ],
    "ext": "js json json5"
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "config": "1.27.0",
    "cors": "2.8.4",
    "express": "4.16.2",
    "json5": "0.5.1",
    "serve-favicon": "2.4.5",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "chai": "4.1.0",
    "chai-as-promised": "7.1.1",
    "chai-http": "3.0.0",
    "dirty-chai": "2.0.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.0",
    "jsdoc": "3.5.3",
    "mocha": "3.4.2",
    "nodemon": "1.12.1",
    "nyc": "11.0.3",
    "proxyquire": "1.8.0",
    "replace-in-file": "3.0.0-beta.2",
    "sinon": "2.3.8",
    "sinon-chai": "2.12.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "npm run lint && npm run coverage",
    "test:unit": "mocha",
    "coverage": "nyc --check-coverage --reporter=text --reporter=lcov mocha",
    "coverage:show": "open coverage/lcov-report/index.html",
    "lint": "eslint src test",
    "doc": "jsdoc src/**/*.js --destination ./.jsdoc",
    "watch": "nodemon",
    "remove:all": "npm run remove:helloworld && npm run remove:socketio && npm run remove:newrelic",
    "remove:helloworld": "node scripts/helloworld.js remove",
    "add:socketio": "node scripts/socketio.js add && npm install socket.io@2.0.4 --save",
    "remove:socketio": "node scripts/socketio.js remove",
    "add:newrelic": "node scripts/newrelic.js add && npm install newrelic@2.4.1 --save",
    "remove:newrelic": "node scripts/newrelic.js remove"
  }
}
