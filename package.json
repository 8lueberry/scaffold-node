{
  "name": "your_service",
  "version": "1.0.0",
  "description": "Service scaffolding",
  "scaffold-version": "1.0.0",
  "author": {
    "name": "Dan Le Van",
    "url": "https://github.com/danlevan/scaffold-node"
  },
  "main": "src/index.js",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": "~8.9.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "config/"
    ],
    "ext": "js json json5"
  },
  "jest": {
    "clearMocks": true
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "class-methods-use-this": "off",
      "no-use-before-define": "off",
      "no-underscore-dangle": "off"
    },
    "env": {
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "config": "1.27.0",
    "cors": "2.8.4",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "express": "4.16.2",
    "json5": "0.5.1",
    "serve-favicon": "2.4.5",
    "winston": "^3.0.0-rc0"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "jest": "^22.4.2",
    "jsdoc": "3.5.3",
    "nodemon": "1.12.1",
    "proxyquire": "1.8.0",
    "replace-in-file": "3.0.0-beta.2"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "npm run lint && jest",
    "lint": "eslint src test",
    "doc": "jsdoc src/**/*.js --destination ./.jsdoc",
    "watch": "nodemon"
  }
}
